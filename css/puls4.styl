fondo = #E6E6E6
grisoscuro = #444
gristexto = #A7A7A7
rojito = #FF3B30
azulito = #5AC8FB

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color azulito

body
	background fondo
	color grisoscuro
	font-family arial
	font-size 16px

footer
	background azulito
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%
	h3
		font size 14px
		font-weight normal
		strong
			display block
		.mejor
			&:before
			&:after
				content "-"

header
	background grisoscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color fondo
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	.logo
		border-right 1px solid rojito
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		.filtro
			font-size 14px
			color rojito
			text-decoration none
			font-weight bold
			font-style italic
		.publicar
			margin -2px 1em 0 0
			background azulito
			color white
			padding 0.2em 0.5em
			text-decoration none
			border-radius 3px
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			&:before
				display inline-block
				margin-right 0.2em
				font-size 1em
				font-family "iconitos"
				content "\e600"
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1.2em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			background azulito
			color white
			display block
			top 12px
			right 0
			width 50%
			padding 3px
			position absolute
			text-align right
			text-decoration none
			&:after
				display inline-block
				font-family "iconitos"
				content "\e602"
				text-shadow 1px 1px 0px black

nav
	background rojito
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 9px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
	ul
		padding 0
	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			a
				color white
				text-decoration none
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
.posts
	padding 0.5em
	.post
		margin-bottom 0.5em
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gristexto
		.acciones
			border-top 3px solid rojito
			padding 0.5em
			overflow hidden
			.datos
				float right
				.comentarios
					background gristexto
					border-radius 3px
					color white
					margin 0 0.5em 0 0
					padding 2px 5px
					text-decoration none
				.estrellita
					text-decoration none
					&:after
						color yellow
						font-family "iconitos"
						content "\e601"
				
			.votos
				float left
				.down
				.up
					text-decoration none 
				.down
					color red
					&:before
						font-size 1.5em
						font-family "iconitos"
						content "\e602"
				.up
					color green
					&:before
						font-size 1.5em
						font-family "iconitos"
						content "\e603"
		.descripcion
			color gristexto
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background rojito
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				.titulo
					color grisoscuro
					font-size 18px
					font-style italic 
					margin 0
					padding 0.5em 0.5em 0 0
			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)
	
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%